# Server Configuration
SERVER_NAME=autonomous-mcp-system
SERVER_VERSION=1.0.0
PORT=3000

# Context Management
CONTEXT_FILE_PATH=.mcp-context.json
CONTEXT_UPDATE_INTERVAL=5000
CONTEXT_BACKUP_ENABLED=true

# RAG System
RAG_COLLECTION_NAME=mcp_knowledge
RAG_EMBEDDING_DIMENSION=384
RAG_MAX_RESULTS=10
RAG_SIMILARITY_THRESHOLD=0.7

# Milvus Configuration
MILVUS_ADDRESS=localhost:19530
# MILVUS_TOKEN=your-token-here

# Recovery System
RECOVERY_ENABLED=true
HEALTH_CHECK_INTERVAL=10000
MAX_RESTART_ATTEMPTS=3
RESTART_DELAY=5000

# Performance Limits
CONTEXT_SYNC_MAX_LATENCY=10000
RAG_RETRIEVAL_MAX_TIME=2000
AGENT_RESPONSE_MAX_TIME=5000
MAX_MEMORY_USAGE=1073741824
TASK_COMPLETION_TARGET=0.9

# Logging
LOG_LEVEL=info
LOG_DIRECTORY=./logs
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=10

# Development
NODE_ENV=development